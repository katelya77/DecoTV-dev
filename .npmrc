# pnpm configuration for multi-platform deployment
# Disable strict peer dependencies to avoid installation issues
strict-peer-dependencies=false

# Enable pre/post scripts when needed (mainly for Vercel)
enable-pre-post-scripts=true

# Automatically install peer dependencies to simplify installation
auto-install-peers=true

# Improve compatibility with different environments
prefer-frozen-lockfile=false

# Windows compatibility for symlinks
symlink=false
